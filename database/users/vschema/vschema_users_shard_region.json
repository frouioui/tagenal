{
  "sharded": true,
  "vindexes": {
    "hash": {
      "type": "hash"
    },
    "region_vdx": {
      "type": "region_json",
      "params": {
        "region_map": "/tmp/countries.json",
        "region_bytes": "1"
      }
    },
    "user_region_lookup": {
      "type": "consistent_lookup_unique",
      "params": {
        "table": "user_lookup",
        "from": "_id",
        "to": "keyspace_id"
      },
      "owner": "user"
    }
  },
  "tables": {
    "user_lookup": {
      "column_vindexes": [
        {
          "column": "_id",
          "name": "hash"
        }
      ]
    },
    "user": {
      "column_vindexes": [
        {
          "columns": [
            "_id",
            "region"
          ],
          "name": "region_vdx"
        },
        {
          "column": "_id",
          "name": "user_region_lookup"
        }
      ],
      "auto_increment": {
        "column": "_id",
        "sequence": "users_seq"
      }
    },
    "user_read": {
      "column_vindexes": [
        {
          "column": "uid",
          "name": "user_region_lookup"
        }
      ],
      "auto_increment": {
        "column": "_id",
        "sequence": "user_read_seq"
      }
    }
  }
}